{
  "compilerOptions": {
    "target": "es5",
    "useDefineForClassFields": true,
    "module": "commonjs",
    "lib": ["es2018", "DOM"],
    "moduleResolution": "Node",
    "strict": false,
    "sourceMap": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noEmit": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "outDir": "./main"
  },
  "exclude": ["src/grammar.ts"],
  "include": ["index.ts", "src/**/*.ts"]
}
